<h1>大会情報</h1>

<div class="table-responsive">
  <%= page_entries_info @games %>
  <table class="table">
    <thead>
      <tr>
        <th><%= sort_link(@search,:created_at,'作成日') %></th>
        <th><%= sort_link(@search,:the_day,'開催日') %></th>
        <th>大会名</th>
        <th>詳細を見る</th>
        <th>編集する</th>
        <th>削除する</th>
        <th><%= sort_link(@search,:updated_at,'更新') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @games.order("created_at DESC").each do |game| %>
        <tr>
          <td><%= game.created_at.strftime("%Y-%m-%d%H:%M") %></td>
          <td><%= game.the_day %></td>
          <td><%= game.title %></td>
          <td><%= link_to 'Show', game %></td>
          <td><%= link_to 'Edit', edit_game_path(game) %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= game.updated_at.strftime("%Y-%m-%d%H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @games %>
</div>
<br>

<%= link_to 'New Game', new_game_path %>
