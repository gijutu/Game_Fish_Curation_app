<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card border-primary">
    <div class="card-header text-white bg-primary border-primary"><h2>マイページ</h2></div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            名前：<%= @user.name %><br><br>
            かな：<%= @user.kana_name %>
            性別：<%= @user.gender %><br><br>
            アドレス：<%= @user.email %><br><br>
            生年月日：<%= @user.birthday %><br><br>
            居住地域：<%= Area.find_by(id: @user.live).area %>
          </div>
          <div class="col-md-3">
            <%= image_tag (@user.icon.url), size: '250x250' if @user.icon.present? %>
          </div>
        </div>
      </div>
    </div>
  </div>
<br>

<div class="container">
  <div class="alert alert-primary" role="alert">
    <div class="row">
      <div class="col-md-6">
        <div class="card card-body">
          <h3 class="card-title">お気に入り一覧</h3>
          <% current_user.favorite_games.each do |game| %>
            <p class="card-text"><%= game.title %></p>
            <%= link_to '大会詳細', game_path(game), class: 'btn btn-primary btn-sm' %>
          <% end %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card card-body">
          <h3 class="card-title">エントリー一覧</h3>
          <% current_user.entry_games.each do |game| %>
            <p class="card-text"><%= game.title %></p>
            <%= link_to '大会詳細', game_path(game), class: 'btn btn-primary btn-sm' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="actions">
  <%= link_to 'プロフィールを編集', edit_user_path(@user), class: 'btn btn-success' %>
</div>
