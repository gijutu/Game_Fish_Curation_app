<ul id="comments_area">
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <p><%= comment.content %></p>
        <p>投稿者：<%= comment.user.name %>
        <% if comment.user == current_user %>
          <%= link_to 'コメントを削除する',game_comment_path(comment.game_id, comment.id), method: :delete, remote: true, class:'btn btn-outline-danger btn-sm' %></p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
